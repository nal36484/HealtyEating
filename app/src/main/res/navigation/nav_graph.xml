<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host_fragment_container"
    app:startDestination="@id/startFragment">
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.healthyeating.presentation.ui.start.StartFragment"
        android:label="StartFragment" >
        <action
            android:id="@+id/action_startFragment_to_productFragment"
            app:destination="@id/productFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_startFragment_to_createEatingListFragment"
            app:destination="@id/createEatingListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_startFragment_to_myListFragment"
            app:destination="@id/myListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/createEatingListFragment"
        android:name="com.example.healthyeating.presentation.ui.createeatinglist.CreateEatingListFragment"
        android:label="CreateEatingListFragment" >
        <action
            android:id="@+id/action_createEatingListFragment_to_totalCalculateFragment"
            app:destination="@id/totalCalculateFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/productFragment"
        android:name="com.example.healthyeating.presentation.ui.addproduct.ProductFragment"
        android:label="ProductFragment" />
    <fragment
        android:id="@+id/totalCalculateFragment"
        android:name="com.example.healthyeating.presentation.ui.totalcalculate.TotalCalculateFragment"
        android:label="TotalCalculateFragment" />
    <fragment
        android:id="@+id/myListFragment"
        android:name="com.example.healthyeating.presentation.ui.mylist.MyListFragment"
        android:label="MyListFragment" />
</navigation>